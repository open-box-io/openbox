{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks"
    ],
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "prefer-template": 2,
        "no-duplicate-imports": 2,
        "operator-linebreak": [
            2,
            "before",
            {
                "overrides": {
                    "?": "after"
                }
            }
        ],
        "no-use-before-define": 0,
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "no-plusplus": 0,
        "consistent-return": 0,
        "no-console": 0,
        "indent": ["error", 4],
        "semi": [1, "always"],
        "no-extra-semi": "off",
        "no-multiple-empty-lines": 1,
        "quotes": [
            1,
            "backtick"
        ],
        "react-hooks/rules-of-hooks": "error", 
        "react-hooks/exhaustive-deps": "warn"
    }
}